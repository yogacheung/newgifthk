<?xml version="1.0" encoding="UTF-8"?>

<card>
    <!-- letter config -->
        <letter>
	<principal>testing</principal>
        
<message>testing

test
</message>
        
	<logo>https://my.ekarda.com/img/sample-logo.gif</logo>

	<site>newgift.com.hk</site>

	<url>newgift.com.hk</url>
        
        <!-- music theme for e-card -->
        <musicTheme>../music/Christmas_Time/soundtrack</musicTheme>
    </letter>
    
    <!-- font config -->
    <font>
        <!-- font fonfig for principal message -->
        <principal>
            <family>stardos_stencilbold</family>

            <!-- font size in pixels -->
            <size>auto</size>
            <!-- when size is auto sizemin/sizemax is minimum and maximum font size -->
            <sizemin>8</sizemin>
            <sizemax>120</sizemax>
            <align>left</align> <!-- text allign, can be "left", "right" "center" -->

            <color>#b30207</color> 
            <!-- position of font according to letter -->
            <x>-190</x>
            <y>-170</y>
        </principal>

        <!-- font settings of message -->
        <message>
            <family>cutiveregular</family>

            <!-- font size in pixels -->
            <size>auto</size>
            <!-- when size is auto sizemin/sizemax is minimum and maximum font size -->
            <sizemin>8</sizemin>
            <sizemax>120</sizemax>
            <align>right</align>
            <color>#312500</color>
            <!-- position of font according to letter -->
            <x>-110</x>
            <y>80</y>
        </message>
    </font>
</card>


